#include <iostream>
#include <cstdlib>   
#include <ctime>     
using namespace std;

int main() {
    srand(time(0));
    int secretNumber = rand() % 100 + 1;

    int guess;
    int attempts = 0;

    cout << "Welcome to the Number Guessing Game!\n";
    cout << "I have selected a number between 1 and 100.\n";
    cout << "Try to guess it!\n\n";
    do {
        cout << "Enter your guess: ";
        cin >> guess;
        attempts++;

        if (guess > secretNumber) {
            cout << "Too high! Try a smaller number.\n";
        }
        else if (guess < secretNumber) {
            cout << "Too low! Try a bigger number.\n";
        }
        else {
            cout << "ğŸ‰ Congratulations! You guessed the correct number.\n";
            cout << "You guessed it in " << attempts << " attempts.\n";
        }

    } while (guess != secretNumber);
     return 0;
}


    return 0;
}
